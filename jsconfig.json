{
    "compilerOptions": {
        "target": "ES6", // Set the target ECMAScript version you're using
        "module": "commonjs", // Set the module system (commonjs for Node.js)
        "outDir": "./dist", // Specify the output directory for compiled files
        "rootDir": "./", // Specify the root directory for your source files
        "strict": true, // Enable strict type checking
        "esModuleInterop": true // Enable interoperability with CommonJS modules
    },
    "include": ["src/**/*.js", "test.js"], // Specify the files to include for analysis and compilation
    "exclude": ["node_modules", "dist"] // Specify files to exclude from analysis and compilation
}